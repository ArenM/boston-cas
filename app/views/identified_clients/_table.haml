.row
  .col-sm-12
    .table-responsive
      %table.table.table-condensed
        %thead
          %th Name
          %th Age
          %th Agency
          %th Family Member
          %th Assessment Score
          %th Cohorts
          
          %th Days Homeless in the Last 3 Years
          %th
          %th

        %tbody
          - @non_hmis_clients.each do |identified_client|
            %tr
              %td
                = identified_client.first_name
                = identified_client.middle_name
                = identified_client.last_name
              %td= Client.age(date: Date.today, dob:identified_client.date_of_birth)
              %td= identified_client.agency
              %td= checkmark identified_client.family_member
              %td= identified_client.assessment_score
              
              %td= simple_format identified_client.cohort_names
              
              %td= identified_client.days_homeless_in_the_last_three_years

              - if can_manage_identified_clients?
                - if identified_client.identified
                  %td
                    = link_to edit_identified_client_path(identified_client.id), class: ['btn', 'btn-sm', 'btn-secondary'] do
                      %span.icon-pencil
                      Edit
                - else
                  %td
                    = link_to({action: :edit, id: identified_client}, class: ['btn', 'btn-sm', 'btn-secondary']) do
                      %span.icon-pencil
                      Edit
                - if !identified_client.involved_in_match?
                  %td
                    = link_to identified_client_path(identified_client),  method: :delete, data: {confirm: "Would you really like to delete this Non-HMIS client?"}, class: ['btn', 'btn-sm', 'btn-danger'] do
                      %span.icon-cross
                      Delete

%p= paginate @non_hmis_clients