%h1 Edit #{_('Identified Client')}
= simple_form_for @non_hmis_client, url: identified_client_path(@non_hmis_client.id) do |f|
  = f.error_notification
  .row
    .col
      .form-inputs
        = render 'client', form: f, disabled: false
        %hr
        .form-actions
        = f.simple_fields_for :client_assessments, @assessment do |a|
          - # view is versioned, so choose view based on model type
          = render @assessment.model_name.element, form: a, disabled: false
        = render 'assessments'
      .form-actions
        = f.button :submit, "Update Client", class: 'btn btn-primary'

= content_for :page_js do
  :javascript
    $('.select2').select2();