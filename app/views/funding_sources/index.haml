.d-flex
  %h1= t '.title'
  = link_to new_funding_source_path, class: 'btn btn-sm btn-primary ml-auto mb-auto' do
    %span.icon-plus
    Add a Funding Source
%p= page_entries_info @funding_sources

- @prompt = t '.search_prompt'
.row
  .col-sm-6
    = render 'search_form'

.table-responsive
  %table.table.table-condensed.table-hover
    - @funding_sources.each do |funding_source|
      %tr
        %td= funding_source.name
        %td
          = link_to edit_funding_source_path(funding_source) do
            %span.icon-pencil
            Edit Rules / Services
%p= paginate @funding_sources
