= simple_form_for form_for_arg do |f|
  = f.error_notification
  - disabled = false
  - hint = ''
  .form-inputs
    = f.input :first_name, required: true, disabled: disabled, hint: hint
    = f.input :middle_name, disabled: disabled
    = f.input :last_name, required: true, disabled: disabled
    = f.input :role, disabled: disabled
    = f.input :email, as: :email, required: true, disabled: disabled
    = f.input :phone, disabled: disabled
    = f.input :cell_phone, disabled: disabled

  .form-actions
    = f.button :submit

