- title = "Match Routes"
- content_for :title, title

= render :partial => 'menus/admin_tabs'

%h1= content_for :title

%table.table.table-condensed
  %thead
    %tr
      %th
        Route Name
      %th
        Active
      %th
        HSA can edit HSA contacts
      %th
        Activate highest priority match automatically
      %th
        Allow multiple active matches on single opportunity
      %th
        Cancel other matches on success
      %th
        Allow multiple matches per client on route
      %th
        Match prioritization
        
  %tbody
    - @routes.each do |route|
      %tr
        %td
          = link_to route.title, edit_admin_match_route_path(route)
        %td
          = checkmark route.active
        %td
          = checkmark route.contacts_editable_by_hsa
        %td
          = checkmark route.should_activate_match
        %td
          = checkmark route.allow_multiple_active_matches
        %td
          = checkmark route.should_cancel_other_matches
        %td
          = checkmark(! route.should_prevent_multiple_matches_per_client)
        %td
          = route.match_prioritization.title
        
